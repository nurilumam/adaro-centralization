@using Adaro.Centralize.Authorization
@using Adaro.Centralize.Web.Areas.AppAreaName.Models.MaterialGroups
@using Adaro.Centralize.Web.Areas.AppAreaName.Startup
@model MaterialGroupsViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Common.MaterialGroups;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/MaterialGroups/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("MaterialGroups")' description='@L("MaterialGroupsHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_MaterialGroups_Create))
    {
    <button id="CreateNewMaterialGroupButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewMaterialGroup")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="MaterialGroupsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetMaterialGroupsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MaterialGroupCodeFilterId">@L("MaterialGroupCode")</label>
                        <input type="text" class="form-control reload-on-keyup" name="materialGroupCodeFilter" id="MaterialGroupCodeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MaterialGroupNameFilterId">@L("MaterialGroupName")</label>
                        <input type="text" class="form-control reload-on-keyup" name="materialGroupNameFilter" id="MaterialGroupNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MaterialGroupDescriptionFilterId">@L("MaterialGroupDescription")</label>
                        <input type="text" class="form-control reload-on-keyup" name="materialGroupDescriptionFilter" id="MaterialGroupDescriptionFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="LanguageFilterId">@L("Language")</label>
                        <input type="text" class="form-control reload-on-keyup" name="languageFilter" id="LanguageFilterId">
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="MaterialGroupsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("MaterialGroupCode")</th>
                            <th>@L("MaterialGroupName")</th>
                            <th>@L("MaterialGroupDescription")</th>
                            <th>@L("Language")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>