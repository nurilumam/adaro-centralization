@using Adaro.Centralize.Web.Areas.AppAreaName.Models.Layout
@using Adaro.Centralize.Web.Areas.AppAreaName.Views.Shared.Components.AppAreaNameLogo
@model HeaderViewModel
@{
    Layout = null;
    var theme = await GetTheme();
    var skin = theme.BaseSettings.Layout.DarkMode || theme.BaseSettings.Menu.AsideSkin == "dark" ? "dark" : "light";
}

<a href="@Url.Action("Index", "Home", new {area = string.Empty})">
    @await Component.InvokeAsync(typeof(AppAreaNameLogoViewComponent), new {logoSkin = skin, logoClass = "h-100px app-sidebar-logo-default"})
    @await Component.InvokeAsync(typeof(AppAreaNameLogoViewComponent), new {logoSkin = skin + "-sm", logoClass = "h-50px app-sidebar-logo-minimize"})
</a>