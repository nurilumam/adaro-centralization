@using Adaro.Centralize.Authorization
@using Adaro.Centralize.Web.Areas.AppAreaName.Models.GeneralLedgerMappings
@using Adaro.Centralize.Web.Areas.AppAreaName.Startup
@model GeneralLedgerMappingsViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Common.GeneralLedgerMappings;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/GeneralLedgerMappings/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("GeneralLedgerMappings")' description='@L("GeneralLedgerMappingsHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_GeneralLedgerMappings_Create))
    {
    <button id="CreateNewGeneralLedgerMappingButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewGeneralLedgerMapping")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="GeneralLedgerMappingsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetGeneralLedgerMappingsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="GLAccountFilterId">@L("GLAccount")</label>
                        <input type="text" class="form-control reload-on-keyup" name="glAccountFilter" id="GLAccountFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="GLAccountDescriptionFilterId">@L("GLAccountDescription")</label>
                        <input type="text" class="form-control reload-on-keyup" name="glAccountDescriptionFilter" id="GLAccountDescriptionFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MappingTypeFilterId">@L("MappingType")</label>
                        <input type="text" class="form-control reload-on-keyup" name="mappingTypeFilter" id="MappingTypeFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ValuationClassFilterId">@L("ValuationClass")</label>
                        <input type="text" class="form-control reload-on-keyup" name="valuationClassFilter" id="ValuationClassFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="ValuationClassDescriptionFilterId">@L("ValuationClassDescription")</label>
                        <input type="text" class="form-control reload-on-keyup" name="valuationClassDescriptionFilter" id="ValuationClassDescriptionFilterId">
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="GeneralLedgerMappingsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("GLAccount")</th>
                            <th>@L("GLAccountDescription")</th>
                            <th>@L("MappingType")</th>
                            <th>@L("ValuationClass")</th>
                            <th>@L("ValuationClassDescription")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>